                     </staff>
                     <staff n="5">
                        <layer n="1">
                           <multiRest num="4" />
                        </layer>
                     </staff>
                     <staff n="6">
                        <layer n="1">
                           <multiRest num="4" />
                        </layer>
                     </staff>
